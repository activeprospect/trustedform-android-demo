<resources>

    <style name="Widget.TrustedForm.Layout.Content" parent="">
        <item name="android:paddingTop">@dimen/default_top_margin</item>
        <item name="android:paddingStart">@dimen/default_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/default_horizontal_margin</item>
        <item name="android:background">@color/background</item>
    </style>

    <style name="Widget.TrustedForm.ViewPager.Tour" parent="">
        <item name="android:background">@drawable/bg_view_pager_tour</item>
    </style>

    <style name="Widget.TrustedForm.ViewPager.Tour.Page" parent="">
        <item name="android:paddingStart">@dimen/default_horizontal_margin</item>
        <item name="android:paddingEnd">@dimen/default_horizontal_margin</item>
    </style>

    <style name="Widget.TrustedForm.TabLayout.Tour" parent="Widget.MaterialComponents.TabLayout">
        <item name="android:background">@color/transparent</item>
        <item name="tabBackground">@drawable/tab_view_pager_selector</item>
        <item name="tabIndicatorHeight">0dp</item>
        <item name="tabPaddingEnd">@dimen/view_pager_dot_height</item>
        <item name="tabPaddingStart">@dimen/view_pager_dot_height</item>
    </style>

    <style name="MaterialButtonStyle" parent="Widget.MaterialComponents.Button.UnelevatedButton">
        <item name="backgroundTint">@drawable/button_selector</item>
        <item name="android:textAllCaps">false</item>
        <item name="textAllCaps">false</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="Toolbar.Primary" parent="@style/Widget.MaterialComponents.Toolbar">
        <item name="android:background">?colorSecondary</item>
        <item name="android:textColor">@android:color/white</item>
        <item name="android:textColorPrimary">@color/blue</item>
    </style>


</resources>