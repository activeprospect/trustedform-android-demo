<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.view.inputmethod.EditorInfo" />

        <variable
            name="isLoading"
            type="Boolean" />

        <variable
            name="viewModel"
            type="com.activeprospect.trustedform.demo.presentation.view.demoform.DemoFormViewModel" />
    </data>

    <androidx.core.widget.NestedScrollView
        android:id="@+id/layoutNestedScrollDemo"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutDemoMain"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/default_view_group_elevation">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/progressDemo"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:elevation="@dimen/default_view_group_elevation"
                android:background="@color/white"
                android:visibility="@{isLoading ? View.VISIBLE : View.GONE}">

                <ImageView
                    android:id="@+id/imageProgress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_load"
                    app:layout_constraintBottom_toTopOf="@id/textProgress"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textProgress"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:gravity="center_horizontal"
                    android:text="@string/loading"
                    android:textAppearance="@style/Text.Input.Primary.ProximaNova.Regular"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/imageProgress"
                    app:layout_constraintVertical_chainStyle="packed" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <TextView
                android:id="@+id/textDemoHeader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/margin_large"
                android:layout_marginTop="@dimen/margin_67dp"
                android:text="@string/demo_header"
                android:textAppearance="@style/Text.Headline.Primary.ProximaNova.Bold"
                app:layout_constraintBottom_toTopOf="@id/textDemoSubheader"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textDemoSubheader"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:text="@string/demo_subheader"
                android:textAppearance="@style/Text.Subtitle.Primary.ProximaNova.Regular"
                app:layout_constraintBottom_toTopOf="@id/textDemoFullNameLabel"
                app:layout_constraintEnd_toEndOf="@id/textDemoHeader"
                app:layout_constraintStart_toStartOf="@id/textDemoHeader"
                app:layout_constraintTop_toBottomOf="@id/textDemoHeader"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textDemoFullNameLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/demo_label_full_name"
                android:textAppearance="@style/Text.Subtitle.Secondary.ProximaNova.Light"
                app:layout_constraintBottom_toTopOf="@id/textDemoFullNameInput"
                app:layout_constraintEnd_toEndOf="@id/textDemoSubheader"
                app:layout_constraintStart_toStartOf="@id/textDemoSubheader"
                app:layout_constraintTop_toBottomOf="@id/textDemoSubheader"
                tools:text="@string/demo_label_full_name" />

            <EditText
                android:id="@+id/textDemoFullNameInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:background="@drawable/selector_custom_labeled_text_edit"
                android:imeOptions="actionNext"
                android:padding="@dimen/padding_medium"
                android:singleLine="true"
                android:text="@={viewModel.fullName}"
                android:textAppearance="@style/Text.Title3.Secondary.ProximaNova.Regular"
                android:translationZ="@dimen/default_card_translation_z"
                app:layout_constraintBottom_toTopOf="@id/textDemoEmailLabel"
                app:layout_constraintEnd_toEndOf="@id/textDemoFullNameLabel"
                app:layout_constraintStart_toStartOf="@id/textDemoFullNameLabel"
                app:layout_constraintTop_toBottomOf="@id/textDemoFullNameLabel" />

            <TextView
                android:id="@+id/textDemoEmailLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/demo_label_email"
                android:textAppearance="@style/Text.Subtitle.Secondary.ProximaNova.Light"
                app:layout_constraintBottom_toTopOf="@id/textDemoEmailInput"
                app:layout_constraintEnd_toEndOf="@id/textDemoFullNameInput"
                app:layout_constraintStart_toStartOf="@id/textDemoFullNameInput"
                app:layout_constraintTop_toBottomOf="@id/textDemoFullNameInput"
                tools:text="@string/demo_label_email" />

            <EditText
                android:id="@+id/textDemoEmailInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:background="@drawable/selector_custom_labeled_text_edit"
                android:imeOptions="actionNext"
                android:padding="@dimen/padding_medium"
                android:singleLine="true"
                android:text="@={viewModel.email}"
                android:textAppearance="@style/Text.Title3.Secondary.ProximaNova.Regular"
                android:translationZ="@dimen/default_card_translation_z"
                app:layout_constraintBottom_toTopOf="@id/textDemoPhoneLabel"
                app:layout_constraintEnd_toEndOf="@id/textDemoEmailLabel"
                app:layout_constraintStart_toStartOf="@id/textDemoEmailLabel"
                app:layout_constraintTop_toBottomOf="@id/textDemoEmailLabel" />

            <TextView
                android:id="@+id/textDemoPhoneLabel"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_large"
                android:text="@string/demo_label_phone_number"
                android:textAppearance="@style/Text.Subtitle.Secondary.ProximaNova.Light"
                app:layout_constraintBottom_toTopOf="@id/textDemoPhoneInput"
                app:layout_constraintEnd_toEndOf="@id/textDemoEmailInput"
                app:layout_constraintStart_toStartOf="@id/textDemoEmailInput"
                app:layout_constraintTop_toBottomOf="@id/textDemoEmailInput"
                tools:text="@string/demo_label_phone_number" />

            <EditText
                android:id="@+id/textDemoPhoneInput"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_xsmall"
                android:background="@drawable/selector_custom_labeled_text_edit"
                android:imeOptions="actionDone"
                android:inputType="phone"
                android:padding="@dimen/padding_medium"
                android:singleLine="true"
                android:text="@={viewModel.phone}"
                android:textAppearance="@style/Text.Title3.Secondary.ProximaNova.Regular"
                android:translationZ="@dimen/default_card_translation_z"
                app:layout_constraintBottom_toTopOf="@id/widgetFormDemo"
                app:layout_constraintEnd_toEndOf="@id/textDemoPhoneLabel"
                app:layout_constraintStart_toStartOf="@id/textDemoPhoneLabel"
                app:layout_constraintTop_toBottomOf="@id/textDemoPhoneLabel" />

            <com.activeprospect.trustedform.sdk.api.view.TrustedFormWidget
                android:id="@+id/widgetFormDemo"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_medium"
                android:visibility="@{isLoading ? View.INVISIBLE : View.VISIBLE}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@id/textDemoPhoneInput"
                app:layout_constraintStart_toStartOf="@id/textDemoPhoneInput"
                app:layout_constraintTop_toBottomOf="@id/textDemoPhoneInput"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>
