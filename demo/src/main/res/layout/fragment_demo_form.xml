<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <import type="android.view.inputmethod.EditorInfo" />

        <variable
            name="isLoading"
            type="Boolean" />

        <variable
            name="viewModel"
            type="com.activeprospect.trustedform.demo.presentation.view.demoform.DemoFormViewModel" />
    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/layoutNestedScrollDemo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fillViewport="true">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/layoutDemoMain"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white"
                android:elevation="@dimen/default_view_group_elevation"
                android:focusable="true"
                android:focusableInTouchMode="true"
                android:paddingBottom="@dimen/padding_large">

                <TextView
                    android:id="@+id/textDemoHeader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginHorizontal="@dimen/margin_large"
                    android:text="@string/demo_header"
                    android:textAppearance="@style/Text.Headline.Primary.ProximaNova.Bold"
                    app:layout_constraintBottom_toTopOf="@id/textDemoSubheader"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textDemoSubheader"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_small"
                    android:textAppearance="@style/Text.Subtitle.Primary.ProximaNova.Regular"
                    app:htmlText="@{@string/demo_subheader}"
                    app:layout_constraintBottom_toTopOf="@id/textDemoFullNameLabel"
                    app:layout_constraintEnd_toEndOf="@id/textDemoHeader"
                    app:layout_constraintStart_toStartOf="@id/textDemoHeader"
                    app:layout_constraintTop_toBottomOf="@id/textDemoHeader"
                    app:layout_constraintVertical_chainStyle="packed" />

                <TextView
                    android:id="@+id/textDemoFullNameLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:labelFor="@id/textEditDemoFormFullName"
                    android:text="@string/demo_label_first_name"
                    android:textAppearance="@style/Text.Subtitle.Secondary.ProximaNova.Light"
                    app:layout_constraintBottom_toTopOf="@id/textEditDemoFormFullName"
                    app:layout_constraintEnd_toEndOf="@id/textDemoSubheader"
                    app:layout_constraintStart_toStartOf="@id/textDemoSubheader"
                    app:layout_constraintTop_toBottomOf="@id/textDemoSubheader"
                    tools:text="@string/demo_label_first_name" />

                <EditText
                    android:id="@+id/textEditDemoFormFullName"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:background="@drawable/selector_custom_labeled_text_edit"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding_medium"
                    android:singleLine="true"
                    android:text="@={viewModel.fullName}"
                    android:textAppearance="@style/Text.Title3.Secondary.ProximaNova.Regular"
                    android:translationZ="@dimen/default_card_translation_z"
                    app:layout_constraintBottom_toTopOf="@id/textDemoEmailLabel"
                    app:layout_constraintEnd_toEndOf="@id/textDemoFullNameLabel"
                    app:layout_constraintStart_toStartOf="@id/textDemoFullNameLabel"
                    app:layout_constraintTop_toBottomOf="@id/textDemoFullNameLabel" />

                <TextView
                    android:id="@+id/textDemoEmailLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:labelFor="@id/textEditDemoFormEmail"
                    android:text="@string/demo_label_email"
                    android:textAppearance="@style/Text.Subtitle.Secondary.ProximaNova.Light"
                    app:layout_constraintBottom_toTopOf="@id/textEditDemoFormEmail"
                    app:layout_constraintEnd_toEndOf="@id/textEditDemoFormFullName"
                    app:layout_constraintStart_toStartOf="@id/textEditDemoFormFullName"
                    app:layout_constraintTop_toBottomOf="@id/textEditDemoFormFullName"
                    tools:text="@string/demo_label_email" />

                <EditText
                    android:id="@+id/textEditDemoFormEmail"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:background="@drawable/selector_custom_labeled_text_edit"
                    android:imeOptions="actionNext"
                    android:padding="@dimen/padding_medium"
                    android:singleLine="true"
                    android:text="@={viewModel.email}"
                    android:textAppearance="@style/Text.Title3.Secondary.ProximaNova.Regular"
                    android:translationZ="@dimen/default_card_translation_z"
                    app:layout_constraintBottom_toTopOf="@id/textDemoPhoneLabel"
                    app:layout_constraintEnd_toEndOf="@id/textDemoEmailLabel"
                    app:layout_constraintStart_toStartOf="@id/textDemoEmailLabel"
                    app:layout_constraintTop_toBottomOf="@id/textDemoEmailLabel" />

                <TextView
                    android:id="@+id/textDemoPhoneLabel"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_large"
                    android:labelFor="@id/textEditDemoFormPhone"
                    android:text="@string/demo_label_phone_number"
                    android:textAppearance="@style/Text.Subtitle.Secondary.ProximaNova.Light"
                    app:layout_constraintBottom_toTopOf="@id/textEditDemoFormPhone"
                    app:layout_constraintEnd_toEndOf="@id/textEditDemoFormEmail"
                    app:layout_constraintStart_toStartOf="@id/textEditDemoFormEmail"
                    app:layout_constraintTop_toBottomOf="@id/textEditDemoFormEmail"
                    tools:text="@string/demo_label_phone_number" />

                <EditText
                    android:id="@+id/textEditDemoFormPhone"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:background="@drawable/selector_custom_labeled_text_edit"
                    android:imeOptions="actionDone"
                    android:inputType="phone"
                    android:padding="@dimen/padding_medium"
                    android:singleLine="true"
                    android:text="@={viewModel.phone}"
                    android:textAppearance="@style/Text.Title3.Secondary.ProximaNova.Regular"
                    android:translationZ="@dimen/default_card_translation_z"
                    app:layout_constraintBottom_toTopOf="@id/widgetFormDemo"
                    app:layout_constraintEnd_toEndOf="@id/textDemoPhoneLabel"
                    app:layout_constraintStart_toStartOf="@id/textDemoPhoneLabel"
                    app:layout_constraintTop_toBottomOf="@id/textDemoPhoneLabel" />

                <com.activeprospect.trustedform.sdk.api.view.TrustedFormWidget
                    android:id="@+id/widgetFormDemo"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_medium"
                    android:visibility="@{isLoading ? View.INVISIBLE : View.VISIBLE}"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="@id/textEditDemoFormPhone"
                    app:layout_constraintStart_toStartOf="@id/textEditDemoFormPhone"
                    app:layout_constraintTop_toBottomOf="@id/textEditDemoFormPhone"
                    app:layout_constraintVertical_chainStyle="packed" />

                <ImageView
                    android:id="@+id/iconActiveProspectTrustedForm"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xsmall"
                    android:contentDescription="@string/active_prospect_trusted_form_info"
                    android:src="@drawable/ic_trusted_form_seal"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/widgetFormDemo" />

                <TextView
                    android:id="@+id/iconActiveProspectTrustedDescription"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/margin_xxsmall"
                    android:paddingBottom="@dimen/padding_xsmall"
                    android:text="@string/active_prospect_trusted_form_label"
                    android:textAppearance="@style/Text.Caption.Secondary.ProximaNova.Regular"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/iconActiveProspectTrustedForm" />

                <View
                    android:id="@+id/iconActiveProspectTrustedClickableArea"
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:layout_constraintBottom_toBottomOf="@+id/iconActiveProspectTrustedDescription"
                    app:layout_constraintLeft_toLeftOf="@+id/iconActiveProspectTrustedForm"
                    app:layout_constraintRight_toRightOf="@+id/iconActiveProspectTrustedForm"
                    app:layout_constraintTop_toTopOf="@+id/iconActiveProspectTrustedForm" />

            </androidx.constraintlayout.widget.ConstraintLayout>
        </androidx.core.widget.NestedScrollView>

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/layoutProgressDemo"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@color/white"
            android:elevation="@dimen/default_view_group_elevation"
            android:visibility="@{isLoading ? View.VISIBLE : View.GONE}"
            tools:visibility="gone">

            <ImageView
                android:id="@+id/imageProgress"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:src="@drawable/ic_load"
                app:layout_constraintBottom_toTopOf="@id/textProgress"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_chainStyle="packed" />

            <TextView
                android:id="@+id/textProgress"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/margin_small"
                android:gravity="center_horizontal"
                android:text="@string/loading"
                android:textAppearance="@style/Text.Input.Primary.ProximaNova.Regular"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/imageProgress"
                app:layout_constraintVertical_chainStyle="packed" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </FrameLayout>

</layout>
